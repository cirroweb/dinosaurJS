<div class="speakers">
  <div class="padding--50 center-text">
    Speakers
  </div>
  <div class="speakers__wrap flex-grid flex--wrap">
    {{#each speakers as |speaker index|}}
      <div class="speaker__card flex-grid flex--column white-border-top half {{if (is-odd index) 'white-border-left'}} {{if speaker.specialClasses speaker.specialClasses}}">
        <div class="padding--50 white-border-bottom flex--center">
          {{#if speaker.picture}}{{computed-inline-styles css="background-image: " value=speaker.picture classNames="speaker__image"}}{{else}}<div></div>{{/if}}
        </div>

        <div>
          <!-- <div class="flex-grid box flex--wrap flex--align-stretch"> -->
          <div class="flex-grid white-border-bottom">

            <div class="box__1 white-border-right flex-grid flex--column -text--left">
              <h5 class="speaker-name padding--50">{{speaker.name}}</h5>
              {{#if speaker.twitterLink}}<div><a href={{speaker.twitterLink}} target="_blank">Twitter</a></div>{{/if}}
              {{#if speaker.githubLink}}<div><a href={{speaker.githubLink}} target="_blank">Github</a></div>{{/if}}
            </div>


            <div class="box__1">
              <div class="speaker__bio-info padding-small">
                <div>{{speaker.type}}</div>
              </div>
              {{#if speaker.isKeynote}}
                <div class="speaker__bio-info flex-grid padding-small">
                  <div>{{speaker.bio}}</div>
                </div>
              {{else}}
                <div class="speaker__bio-info flex-grid padding-small">
                  <div>{{speaker.talkName}}</div>
                </div>
              {{/if}}
            </div>
          </div>

          <div class="flex-grid">
            <div class="box__1 white-border-right flex-grid flex--column -text--left">
              <div class="speaker__bio-left padding-small">
                {{speaker.bio}}
              </div>
            </div>


            <div class="box__1">
              <div class="speaker__bio-info flex-grid padding-small">
                <div>{{speaker.talkAbstract}}</div>
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}

    {{!-- This is filler for odd number of speakers  !--}}
    <div class="speaker__card flex-grid flex--column white-border-top half white-border-left"></div>
  </div>
  {{outlet}}
</div>
